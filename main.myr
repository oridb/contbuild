use std

use "types"
use "config"
use "build"

const main = {args
	var cmd, cfg, b

	cmd = std.optparse(args, &[
		.opts=[
			[.opt='c', .arg="config", 
				.desc="configuration file to use (default: contbuild.ini)"]
		][:]
	])

	cfg = "contbuild.ini"
	for opt in cmd.opts
		match opt
		| ('c', c):	cfg = c
		| _:	std.die("unreachable")
		;;
	;;

	b = contbuild.load(cfg)
	contbuild.run(b)
}

